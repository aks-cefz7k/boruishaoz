version: "3.7"
services:
  openatc:
    image: 'openatc-test:latest'
    ports:
      - '10003:10003'
      - '31003:31003/udp'
      - '31002:31002/udp'
    networks:
      - kiss-net-17
    deploy:
      replicas: 1
      restart_policy:
        condition: none
      placement:
        constraints:
          - node.hostname == mesos103
    environment:
      - ppostgresql=192.168.13.103
      - ppostgresport=5432
      - pgusername=postgres
      - pgpassword=password
      - predis=192.168.13.103
      - predisport=6379

networks:
  kiss-net-17:
    external: true


